<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Checkout</h1>
        <h4>Your Total: ${{total}}</h4>
        <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
            {{errMsg}}
        </div>
        <form action="/checkout" method="post" id="checkout-form">
	<input type="hidden" id="name" class="form-control" required name="name" value="John Doe">
	<input type="hidden" id="address" class="form-control" required name="address" value="1 Elm Street Flemington NJ 08822">
		<div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-name">Credit Card Transaction</label>
                        <label class="switch">
			  <input type="checkbox">
			  <div class="slider round"></div>
			</label>
                    </div>
		</div>
		<hr>
		<div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-name">Product</label>
			<label for="card-name">Lone Eagle Keg</label>
                        <input type="hidden" id="product-name" class="form-control" value="Lone Eagle Keg" required>
                    </div>
		    <div class="form-group">
                        <label for="card-name">Product Quantity</label>
                        <input type="text" id="product-quantity" class="form-control" value="1" required>
                    </div>
		    <div class="form-group">
                        <label for="card-name">Subtotal</label>
                        <input type="text" id="order-subtotal" class="form-control" value="$100.00" required>
                    </div>
		    <div class="form-group">
                        <label for="card-name">Taxes</label>
                        <input type="text" id="order-taxes" class="form-control" value="$7.00" required>
                    </div>
		    <div class="form-group">
                        <label for="card-name">Discount</label>
                        <input type="text" id="order-discount" class="form-control" value="$0.00" required>
                    </div>
                </div>
		<hr>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-name">Card Holder Name</label>
                        <input type="text" id="card-name" class="form-control" required value="John Doe">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-number">Credit Card Number</label>
                        <input type="text" id="card-number" class="form-control" required value="0000 0000 0000 0000">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="card-expiry-month">Expiration Month</label>
                                <input type="text" id="card-expiry-month" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="card-expiry-year">Expiration Year</label>
                                <input type="text" id="card-expiry-year" class="form-control" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-cvc">CVC</label>
                        <input type="text" id="card-cvc" class="form-control" value="000" required>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Process</button>
        </form>
    </div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>